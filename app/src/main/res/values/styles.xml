<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="InputRounded" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>

        <item name="boxStrokeColor">@color/dark_grey</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>

        <item name="android:layout_height">@dimen/touchtarget_min</item>

        <item name="hintTextColor">@color/dark_grey</item>
        <item name="android:textColorHint">@color/dark_grey</item>
    </style>

    <style name="ButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">@dimen/touchtarget_min</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:textSize">@dimen/txt_headline</item>
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="CheckBoxPrimary" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/primary</item>
    </style>

</resources>